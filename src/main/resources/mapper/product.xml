<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.orange2.model.ProductRepository">
	<select id="findAll" resultType="shop.mtcoding.orange2.model.Product">
		select * from product
	</select>
	
	<select id="findOne" resultType="shop.mtcoding.orange2.model.Product">
		select * from product where id = #{id}
	</select>
</mapper>